category:            Language
build-type:          Simple
cabal-version:       >=1.8

executable ewe
  main-is:             Main.hs
  Build-depends:       base >=4.5 && < 5,
                       transformers >=0.3,
                       mtl >= 2.1,
                       array >= 0.4.0.0
  hs-source-dirs:      src
  build-tools:         alex, happy
  other-modules:       Language.EWE.AbsSyn,
                       Language.EWE.VM,
                       Language.EWE.Token,
                       Language.EWE.Scanner,
                       Language.EWE.Parser

